name:                hajong
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Samuli Thomasson
maintainer:          simsaladin@paivola.fi
-- copyright:           
category:            Game
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

-- data-files: web/Game.hs

library
  hs-source-dirs:      src
  exposed-modules:     Hajong.Server
                     , Hajong.Worker
                     , Hajong.Connections
                     , Mahjong
                     , Mahjong.Tiles
                     , Mahjong.Round
                     , Mahjong.State
                     , Mahjong.Mechanics
                     , Mahjong.Hand
                     , Mahjong.Hand.Mentsu
                     , Mahjong.Hand.Algo
                     , Mahjong.Yaku.Builder
                     , Mahjong.Yaku.Standard
                     -- , Hajong.Client.CLI
                     -- , Hajong.Client.PrettyPrint

  other-modules:       Prelude

  build-depends:       base                    >=4.6
                     , lens                    >=4.0
                     , containers              >=0.5
                     , random-shuffle          >=0.0
                     , classy-prelude          >=0.8
                     , text                    >=0.1
                     , websockets              >=0.8
                     , monad-logger            >=0.3
                     , aeson
                     , fast-logger
                     , data-default
                     , stm 
                     , mtl
                     , random
                     , split
                     , either
                     , free
                     , async
                     , utility-ht
                     , semigroups
                     , ansi-wl-pprint

  default-extensions:  TemplateHaskell
                     , OverloadedStrings
                     , ConstraintKinds
                     , FlexibleContexts
                     , GeneralizedNewtypeDeriving
                     , StandaloneDeriving
                     , Rank2Types
  default-language:    Haskell2010
  ghc-options:         -threaded

executable hajong-server
  main-is:             server.hs
  default-language:    Haskell2010
  hs-source-dirs:      app

  build-depends:       hajong
                     , base
                     , classy-prelude
                     , text

