test-suite test
  type:                exitcode-stdio-1.0
  main-is:             tests.hs
  hs-source-dirs:      tests
  default-language:    Haskell2010

  build-depends:       hajong
                     , base
                     , classy-prelude
                     , mtl
                     , lens
                     , silently
                     , async
                     , tasty
                     , tasty-hunit
                     , tasty-quickcheck
                     , QuickCheck
                     , unix
                     , temporary

  default-extensions:  OverloadedStrings

  ghc-options:       -rtsopts
